@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Üdünç Kitap Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>İŞLEM ID</th>
        <th>KİTAP ID</th>
        <th>ÜYE</th>
        <th>PERSONEL</th>
        <th>ALIŞ TARİHİ</th>
        <th>İADE TARİHİ</th>
        <th>İADE AL</th>
    </tr>
    @foreach(var k in Model)
            {
                <tr>
                    <td>@k.ID</td>
                    <td>@k.TBLKITAP.AD</td>
                    <td>@k.TBLUYELER.AD&nbsp @k.TBLUYELER.SOYAD</td>
                    <td>@k.TBLPERSONEL.PERSONEL</td>
                    <td>@Convert.ToDateTime(k.ALISTARIH).ToString("dd/MM/yyyy")</td>
                    <td>@Convert.ToDateTime(k.IADETARIH).ToString("dd/MM/yyyy")</td>
                    <td><a href="/Odunc/Odunciade/@k.ID" class="btn btn-default" style="background-color:#4369e7; color:#fff">Kitap İade Et</a></td>
                </tr>
            }
</table>

